<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% @users.each do |user| %>
  <a href="<%= "/apps/#{params[:bundle]}/users/#{user}/events" %>">
    <ul style="list-style-type: none;">
      <li style="display: block;width: 100px;float: left;margin: 10px;width: 100px;text-align: center;">
        <span>
          <% src = asset_path "empty.png" %>
          <% if !@icons[user].blank?
            src = EVENTS_BASE_URL + "/uploads/event/attachment/" + @icons[user]
           end %>
          <img class="icon" src="<%= src %>" />
        </span>
        <span>
          <% if !@names[user].blank? %>
            <%= @names[user] %>
          <% else %>
            <%= user %>
          <% end %>
        </span>
      </li>
    </ul>
  </a>
<% end %>
