<p id="notice"><%= notice %></p>

<h1>Apps</h1>
<% @apps.each do |bundle| %>
  <a href="<%= "/apps/#{bundle}/users" %>">
    <ul class="nostyle">
      <li class="grid">
        <span>
          <% src = asset_path "empty.png" %>
          <% if !@icons[bundle].blank?
            src = EVENTS_BASE_URL + "/uploads/event/attachment/" + @icons[bundle]
           end %>
          <img class="icon" src="<%= src %>" />
        </span>
        <br />
        <span>
          <% if !@names[bundle].blank? %>
            <%= @names[bundle] %>
          <% else %>
            <%= bundle %>
          <% end %>
        </span>
      </li>
    </ul>
  </a>
<% end %>
